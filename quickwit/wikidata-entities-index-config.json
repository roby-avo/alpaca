{
  "version": "0.8",
  "index_id": "wikidata_entities",
  "indexing_settings": {
    "commit_timeout_secs": 30
  },
  "search_settings": {
    "default_search_fields": [
      "name_text",
      "bow"
    ]
  },
  "doc_mapping": {
    "mode": "lenient",
    "field_mappings": [
      {
        "name": "id",
        "type": "text",
        "tokenizer": "raw",
        "fast": true
      },
      {
        "name": "name_text",
        "type": "text",
        "tokenizer": "default",
        "record": "position"
      },
      {
        "name": "context",
        "type": "text",
        "tokenizer": "default",
        "record": "position"
      },
      {
        "name": "bow",
        "type": "text",
        "tokenizer": "default",
        "record": "position"
      },
      {
        "name": "coarse_type",
        "type": "text",
        "tokenizer": "raw",
        "fast": true
      },
      {
        "name": "fine_type",
        "type": "text",
        "tokenizer": "raw",
        "fast": true
      }
    ],
    "tag_fields": [
      "id",
      "coarse_type",
      "fine_type"
    ]
  }
}
